<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>

    $.ajax({
        type: 'GET',
        url: "http://localhost:57678/ApproveCourse",
        success: function (data) {
            $.each(data, function (key, value) {
                var status
                if (value.status == 'true') {
                    status = 'Active'
                } else {
                    status = 'De-Active'
                }

                $('#list_courseWaiting').append(
                    `<li class="body-table table-1">
                        <span>1</span>
                    </li>
                    <li class="body-table table-1">
                        <span>${value.title}</span>
                    </li>
                    <li class="body-table table-2">
                        <span>${value.category}</span>
                    </li>
                    <li class="body-table table-2">
                        <span>${value.price}</span>
                    </li>
                    <li class="body-table table-2">
                        <span>${status}</span>
                    </li>
                    <li class="body-table table-1">
                        <button onclick="approve('${value.id}')">Approve</button>
                        <button onclick="delete_course('${value.id}')">Reject</button>
                    </li>`
                );
            });
        },
    });

    function approve(id) {
        $.ajax({
            url: "http://localhost:57678/Courses/Active/" + id,
            type: "PUT",
            contentType: "application/json",
            success: function () {
                window.location.href = "/";
            }
        })
    }

    function delete_course(id) {
        $.ajax({
            url: "http://localhost:57678/Course/" + id,
            type: "put",
            contentType: "application/json",
            success: function () {
                window.location.href = "/";
            }
        })
    }
</script>

